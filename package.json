{
  "name": "wy-cash",
  "version": "1.0.0",
  "description": "TDD examples on TS",
  "main": "index.js",
  "author": "Artem Halas",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "gts": "^1.0.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "scripts": {
    "check": "gts check",
    "clean": "gts clean",
    "compile": "yarn clean && tsc -p .",
    "fix": "gts fix",
    "test": "jest"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "modulePathIgnorePatterns": ["<rootDir>/build"],
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/src/$1"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && yarn run check"
    }
  }
}
